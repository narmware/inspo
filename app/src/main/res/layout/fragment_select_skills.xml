<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@android:color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.SelectSkillsFragment">


    <TextView
        android:text="Select your intrest"
        android:textSize="16sp"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/progressview"
            android:elevation="10dp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            app:indicatorName="BallClipRotateIndicator"
            app:indicatorColor="@color/colorAccent"
            />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/option_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    </RelativeLayout>

    <LinearLayout
        android:background="@color/grey_200"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"></LinearLayout>

    <TextView
        android:text="I can help with"
        android:textSize="16sp"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <co.lujun.androidtagview.TagContainerLayout
        android:id="@+id/selected_opt_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:container_enable_drag="false"
        app:tag_clickable="true"
        app:tag_theme="none"
        app:tag_enable_cross="true"
        app:tag_border_color="@color/grey_900"
        app:tag_ripple_duration="400"
        app:container_border_color="@android:color/white"
        android:background="@android:color/white"
        app:tag_background_color="@android:color/white"
        app:container_background_color="@android:color/transparent"
        />

</LinearLayout>